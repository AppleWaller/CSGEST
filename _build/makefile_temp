TARGET = temp

OBJS = temp.o

REBUILDABLE = $(TARGET) $(OBJS)

COMPILER = g++

LOCAL_CPP_FLAGS = -std=c++11 
				  # -DNDEBUG

# searching print_util.h and inc.h for stash.cpp
INCLUDE_DIRS = -I.. \
			   # -I../include/ 
			   # -I../include/gtest/ \
			   -I../include/gtest/internal/

# ./stash to find stash.cpp
#VPATH = ./stash
#or 

vpath %.cpp ../

all : $(OBJS)
	$(COMPILER) -o $(TARGET) $^

%.o : %.cpp
	$(COMPILER) $(LOCAL_CPP_FLAGS) $(INCLUDE_DIRS) -g -o $@ -c $<

.PHONY : clean
clean:
		-rm $(REBUILDABLE)
